<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.liudong.ttpodmusic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        <activity
            android:name="cn.liudong.ttpodmusic.MainActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="cn.liudong.ttpodmusic.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="cn.liudong.ttpodmusic.MusicPlayActivity"
            android:label="@string/title_activity_music_play" >
        </activity>

        <service android:name="cn.liudong.ttpodmusic.service.MusicPlayService" >
        </service>

        <activity
            android:name="cn.liudong.ttpodmusic.CustomThemeActivity"
            android:label="@string/title_activity_custom_theme" >
        </activity>
        
    </application>

</manifest>